{
  "compilerOptions": {
    "strictPropertyInitialization": false,

    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "app.ts",
    "database/db.ts",
    "models/Product.ts",
    "router.ts"
  ]
}
